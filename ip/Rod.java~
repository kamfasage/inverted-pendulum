package ip;

import java.awt.Graphics2D;

public class Rod {

	int x = 400;
	int y = 400;

	//TODO : should it be that way???
	//	int fi = 0;
	
	public static final int LENGTH = 60;
	public static final int WIDTH = 2;

	void move(){
		x++;
		//y++;
	}

	public void paint(Graphics2D g){
		g.drawRect(x, y, WIDTH, LENGTH);
	}	

	public int getX(){
		return x;
	}

	public int getY(){
		return y;
	}	
}